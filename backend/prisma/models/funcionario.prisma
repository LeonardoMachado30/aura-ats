model Funcionario {
    // ARQUITETURA CORRETA âœ…
    id    String  @id @default(uuid(7))
    setor String? @db.VarChar(100)
    cargo String? @db.VarChar(100)

    usuarioSistema   UsuarioSistema? @relation(fields: [usuarioSistemaId], references: [id], onDelete: Cascade)
    usuarioSistemaId String?         @unique

    pessoa   Pessoa? @relation(fields: [pessoaId], references: [id], onDelete: Cascade)
    pessoaId String? @unique

    @@index([pessoaId])
    @@index([usuarioSistemaId])
    @@schema("Funcionario")
}
