{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "rootDir": "./",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "sourceMap": true
    // "paths": {
    //   "@prisma/client": ["../generated/prisma"]
    // }
  },
  "include": ["src/**/*.ts", "prisma/seed.ts"],
  "exclude": ["node_modules", "dist"]
}
